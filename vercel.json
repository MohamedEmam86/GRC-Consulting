{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/index.ts" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ]
}
